-- Function to perform the chosen operation
local function calculate(choice, num1, num2)
    if choice == "addition" then
        return num1 + num2
    elseif choice == "subtraction" then
        return num1 - num2
    elseif choice == "multiplication" then
        return num1 * num2
    elseif choice == "division" then
        if num2 ~= 0 then
            return num1 / num2
        else
            return "Error: Division by zero is not allowed."
        end
    else
        return "Invalid choice."
    end
end

-- Main program
print("Choose an operation: addition, subtraction, multiplication, division")
local choice = io.read()

print("Enter the first number:")
local num1 = tonumber(io.read())

print("Enter the second number:")
local num2 = tonumber(io.read())

local result = calculate(choice, num1, num2)
print("The result is: " .. tostring(result))
