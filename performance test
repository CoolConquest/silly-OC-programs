-- This script performs a computationally intensive task to simulate heavy usage.

local function heavy_computation()
    local total = 0
    for i = 1, 1e7 do
        total = total + math.sin(i) * math.cos(i) -- Arbitrary computation
    end
    return total
end

local function simulate_overload()
    local threads = {}
    local num_threads = 8 -- Number of parallel computations
    for i = 1, num_threads do
        threads[i] = coroutine.create(function()
            while true do
                heavy_computation()
            end
        end)
    end

    while true do
        for i = 1, num_threads do
            coroutine.resume(threads[i])
        end
    end
end

print("Starting heavy computation. Use Ctrl+C to stop.")
simulate_overload()
